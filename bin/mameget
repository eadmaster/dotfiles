#!/bin/sh

# args checking
if [ "$1" = "-h" ] || [ "$1" = "--help" ] | [ -z "$2" ]; then
	echo "usage: $(basename $0) ROMSETNAME"
	echo
	exit 1
fi

wget -N "https://archive.org/download/mame-merged/mame-merged/$1.zip" "$2" "$3" "$4"

