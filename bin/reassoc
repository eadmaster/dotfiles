xdg-mime default geany.desktop "text/x-readme"
xdg-mime default geany.desktop "text/x-nfo"
xdg-mime default geany.desktop "text/x-sql"
xdg-mime default geany.desktop "application/xml"

xdg-mime default xarchive.desktop "application/zip"
xdg-mime default xarchive.desktop "application/x-rar"
xdg-mime default xarchive.desktop "application/x-7z-compressed"
# alternative: peazip.desktop | file-roller

