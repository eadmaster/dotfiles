
export XDG_UTILS_INSTALL_MODE=user

# MEMO:
# http://manpages.ubuntu.com/manpages/maverick/man1/xdg-mime.1.html
# /etc/mime.types
# /root/.local/share/applications/
# /usr/share/mime/packages/*.xml

xdg-mime default geany.desktop "text/plain"
xdg-mime default geany.desktop "text/x-csrc"
xdg-mime default geany.desktop "text/x-makefile"
xdg-mime default geany.desktop "text/x-python"
